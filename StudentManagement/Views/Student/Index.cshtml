@model IndexViewModel
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<div class="mb-3">
    <form id="filterForm" method="get" class="row g-2">
        <div class="col-md-4">
            <input type="text" name="q" value="@Model.Search" class="form-control" placeholder="Search by name..." />
        </div>

        <div class="col-md-3 form-check d-flex align-items-center">
            <input class="form-check-input me-2" type="checkbox" id="adultsOnly" name="adultsOnly" value="true" @(Model.AdultsOnly ? "checked" : "") />
            <label class="form-check-label" for="adultsOnly">Show only students age &gt; 18</label>
        </div>


        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>

        <div class="col-md-3 text-end">
            <a asp-action="Create" class="btn btn-success">Add New Student</a>
        </div>
    </form>
</div>

<div class="alert alert-info">
    <strong>Total Students:</strong> @Model.TotalCount &nbsp; | &nbsp;
    <strong>Adults (&gt;18):</strong> @Model.AdultCount
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Students)
        {
            <tr>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Email</td>
                <td>@s.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary">Edit</a>

                    <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this student?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById('adultsOnly').addEventListener('change', function () {
            this.form.submit();
        });
    </script>
}

